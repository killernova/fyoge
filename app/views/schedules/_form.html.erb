<%= form_for @schedule do |f| %>
    <div class="form-group">
      <%= f.select :course_id, options_from_collection_for_select(@courses, :id, :cn_name),
                   prompt: '请选择课程', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.select :user_id, options_from_collection_for_select(@teachers, :id, :name),
                   prompt: '请选择老师', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.select :weekday, options_for_select(@dates.map {|key, val| [key, val]}),
                   prompt: '请选周几', class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.select :serial_number, options_for_select((1..4).to_a.map {|s| [s, s]}),
                   prompt: '请选第几节课', class: 'form-control' %>
    </div>
    <div class="form-group">
      <label for="">请选择日期</label>
      <div class="date-picker"></div>
      <input type="text" name="date" data-field="datetime" readonly>
    </div>
    <div class="form-group">
      <%= f.submit '提交', class: 'btn btn-success' %>
    </div>
<% end %>