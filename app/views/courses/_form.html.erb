<div class="row">
  <div class="col-xs-12 text-center"><%= yield :course_title %></div>
</div>
<%= form_for @course do |f| %>
    <div class="form-group">
      <%= f.text_field :cn_name, class: 'form-control', placeholder: '中文名称' %>
    </div>

    <div class="form-group">
      <%= f.text_field :en_name, class: 'form-control', placeholder: '英文名称' %>
    </div>

    <div class="form-group">
      <%= f.text_field :description, class: 'form-control', placeholder: '额外信息' %>
    </div>

    <div class="form-group">
        <span class="label-name">Pick Color</span>
        <%= f.color_field :color %>
    </div>

    <div class="form-group">
      <%= f.submit '提交', class: 'btn btn-success form-control' %>
    </div>
<% end %>