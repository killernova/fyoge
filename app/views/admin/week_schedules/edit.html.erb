<div class="row">
  <div class="col-md-12 title text-center">
    <h3>编辑课程表(<%= @week_start.strftime('%m.%d') %> - <%= @week_end.strftime('%m.%d') %>)</h3>
  </div>
</div>

<%= render partial: 'table', locals: { dates: @dates, schedule: @schedule, schedules: @schedules, week_start: @week_start } %>

<div class="options hidden">
  <div class="row">
    <div class="col-md-2">
      <div class="pull-right">课名</div>
    </div>
    <div class="col-md-8">
      <%= select_tag :course_id, options_from_collection_for_select(Course.all, 'id', 'cn_name'), class: 'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <div class="pull-right">授课教师</div>
    </div>
    <div class="col-md-8">
      <%= select_tag :user_id, options_from_collection_for_select(User.teachers, 'id', 'name'), class: 'form-control' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="btn btn-success pull-right confirm-button">提交</div>
      <div class="btn btn-danger pull-right cancel-button">取消</div>
      <div class="btn btn-warning pull-right destroy-button">删除</div>
    </div>
  </div>
</div>