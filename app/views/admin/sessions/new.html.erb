<div class="login-box sign-in-sign-up-box" id="login-with-password">
  <div class="title">Log In</div>
  <%= form_for :session, url: admin_sessions_path, remote: true, html: { class: 'login-form sign-in-sign-up-form' } do |f| %>
      <%= hidden_field_tag :authenticity_token, csrf_meta_tag %>
      <div class="form-item mobile-form-item">
        <label><i class="fa fa-mobile" aria-hidden="true"></i></label>
        <%= f.text_field :mobile, placeholder: '请输入手机号码', class: 'mobile-input' %>
      </div>
      <div class="input-tip hidden">
        <span class="error" id="mobile-error">
          <i class="fa fa-minus-circle" aria-hidden="true"></i>
          <span class="error-message"></span>
        </span>
      </div>

      <div class="form-item">
        <label><i class="fa fa-lock" aria-hidden="true"></i></label>
        <%= f.password_field :password, placeholder: '请输入密码', class: 'password-input' %>
      </div>
      <div class="input-tip hidden">
        <span class="error" id="password-error">
          <i class="fa fa-minus-circle" aria-hidden="true"></i>
          <span class="error-message"></span>
        </span>
      </div>


      <div class="other-options">
        <div class="checkbox pull-left">
          <label>
            <%= f.check_box :remember_me %> 记住我
          </label>
        </div>
      </div>

      <button class="btn login-btn submit-button" type="button">立即登录</button>
      <%= f.submit '', class: 'hidden hidden-submit-button' %>

  <% end %>

</div>
