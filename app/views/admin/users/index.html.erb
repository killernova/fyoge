<div class="row title">
  <div class="col-md-12 text-center"><h3>会员列表</h3></div>
</div>

<table class="user-lists table table-hover">
  <thead>
  <tr>
    <th>姓名</th>
    <th>性别</th>
    <th>手机</th>
    <th>昵称</th>
    <th>角色</th>
    <th>操作</th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.sex %></td>
        <td><%= user.mobile %></td>
        <td><%= user.nick_name %></td>
        <td><%= user.roles.pluck(:name).join(',') %></td>
        <td>
          <%= link_to '编辑', edit_admin_user_path(user), class: 'btn btn-primary' %>
          <%= link_to '删除', admin_user_path(user), method: :delete, data: { confirm: '确定删除该用户吗？'},
                      class: 'btn btn-warning', remote: true %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>